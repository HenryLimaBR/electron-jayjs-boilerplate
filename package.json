{
  "name": "jayelectron",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --win --ia32",
    "preview": "vite preview"
  },
  "main": "dist-electron/main.js",
  "build": {
    "directories": {
      "output": "out-electron",
      "buildResources": "build-electron"
    },
    "appId": "jayjs-electron-boilerplate",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "JayElectronBoilerplate",
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "@jay-js/system": "latest",
    "@jay-js/ui": "latest"
  },
  "devDependencies": {
    "electron": "^29.1.5",
    "autoprefixer": "^10.4.16",
    "daisyui": "^3.9.4",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-electron": "^0.28.4"
  }
}
